<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="zwave.me_zme_064374_00_000">
		<label>ZWave.me ZME_064374</label>
		<description><![CDATA[Wall Plug Switch<br><h1>Device Overview</h1><p>Brief description here</p><h1>Inclusion and Exclusion</h1><p>To include the device into the network...</p><p>To exclude the device from the network...</p>]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="brightness-1" typeId="brightness">
				<label>Dimmer 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel><!-- Remove if this is not a battery device -->
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel><!-- More samples... -->
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="binding:Command:OnOffType">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
			<channel id="power_watts-1" typeId="power_watts">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel>
			<channel id="power_current-1" typeId="power_current">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_A</property>
				</properties>
			</channel>
			<channel id="power_voltage-1" typeId="power_voltage">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_V</property>
				</properties>
			</channel>
			<channel id="power_powerfactor-1" typeId="power_powerfactor">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_Power_Factor</property>
				</properties>
			</channel>
			<channel id="power_energy-1" typeId="power_energy">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_KWh</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">ZWave.me</property>
			<property name="model">ZME_064374</property>
			<property name="manufacturerId">0115</property>
			<property name="manufacturerRef">1000:0200</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_1_1" type="integer" groupName="configuration">
				<label>1: Set LED indication mode</label>
				<description><![CDATA[]]>
				</description>
				<default>3</default>
				<options>
					<option value="0">Disabled</option>
					<option value="1">Show switch state</option>
					<option value="2">Night mode</option>
				</options>
			</parameter>
			<parameter name="config_2_2" type="integer" groupName="configuration">
				<label>2: Automatic switch off</label>
				<description><![CDATA[If not zero, automatically switch off after a user defined time]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_3_1" type="integer" groupName="configuration">
				<label>3: Function of RF off command</label>
				<description><![CDATA[Defines how to interpret RF Off command. Can be used in conjunction with Auto Off function: Ignore - to switch on the light by motion detectors and switch it off after some amount of time: in case of multiple motion detectors each would try to switch the light off that would break logics; Switch on - to switch on the light on both On and Off paddle press on the remote and switch it off after some amount of time. Button off click will still work (if button operations are not disabled).]]></description>
				<default>0</default>
				<options>
					<option value="0">Switch OFF</option>
					<option value="1">Ignore</option>
					<option value="2">Switch ON</option>
					<option value="3">Switch on if load is off else switch off</option>
				</options>
			</parameter>
			<parameter name="config_5_1" type="integer" groupName="configuration">
				<label>5: Restore switch state after power cycle</label>
				<description><![CDATA[Defines if the switch should restore switch state to the last state prior to device power off (power cycle).]]></description>
				<default>1</default>
				<options>
					<option value="0">No, turn off</option>
					<option value="1">Yes (Default)</option>
				</options>
			</parameter>
			<parameter name="config_20_2" type="integer" min="0" max="1800"
				groupName="configuration">
				<label>20: Energy consumption</label>
				<description><![CDATA[Specify the consumption of the load in watts, for the calculation of power consumption. Max load 1800 W.]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_21_1" type="integer" groupName="configuration">
				<label>21: Off Color</label>
				<description><![CDATA[]]>
				</description>
				<default>0</default>
				<options>
					<option value="0">Off</option>
					<option value="1">Red</option>
					<option value="2">Green</option>
					<option value="3">Blue</option>
					<option value="4">Yellow</option>
				</options>
			</parameter>
			<parameter name="config_22_1" type="integer" groupName="configuration">
				<label>22: On Color</label>
				<description><![CDATA[]]>
				</description>
				<default>3</default>
				<options>
					<option value="0">Off</option>
					<option value="1">Red</option>
					<option value="2">Green</option>
					<option value="3">Blue</option>
					<option value="4">Yellow</option>
				</options>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>Group 1</label>
				<description><![CDATA[Send Reports on switch state change]]></description>
				<multipleLimit>5</multipleLimit>
			</parameter>
			<parameter name="group_2" type="integer" multiple="true"
				groupName="association">
				<label>Group 2</label>
				<description><![CDATA[Controlled by buttons]]></description>
				<multipleLimit>5</multipleLimit>
			</parameter><!-- Remove the wakeup if this is not a battery device -->
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent</description>
			</parameter>
		</config-description>
	</thing-type>
</thing:thing-descriptions>