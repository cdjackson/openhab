<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="everspring_st815_00_000">
		<label>Everspring ST815</label>
		<description><![CDATA[Illumination Sensor<br><h1>Device Overview</h1><p>Brief description here</p><h1>Inclusion and Exclusion</h1><p>To include the device into the network...</p><p>To exclude the device from the network...</p>]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="brightness-1" typeId="brightness">
				<label>Dimmer 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel><!-- Remove if this is not a battery device -->
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel><!-- More samples... -->
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="binding:Command:OnOffType">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
			<channel id="power_watts-1" typeId="power_watts">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel>
			<channel id="power_current-1" typeId="power_current">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_A</property>
				</properties>
			</channel>
			<channel id="power_voltage-1" typeId="power_voltage">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_V</property>
				</properties>
			</channel>
			<channel id="power_powerfactor-1" typeId="power_powerfactor">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_Power_Factor</property>
				</properties>
			</channel>
			<channel id="power_energy-1" typeId="power_energy">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_KWh</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Everspring</property>
			<property name="model">ST815</property>
			<property name="manufacturerId">0060</property>
			<property name="manufacturerRef">0007:0001</property>
			<property name="DefaultAssociations">1</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_1_1" type="integer" min="0" max="99"
				groupName="configuration">
				<label>1: Basic Set Level</label>
				<description><![CDATA[Set basic set value to be on or off.<BR/>Set to 0 to disable]]></description>
				<default>99</default>
			</parameter>
			<parameter name="config_2_2" type="integer" min="0" max="1000"
				groupName="configuration">
				<label>2: Lux Trigger On Value</label>
				<description><![CDATA[Lux level when ON command is sent out. <BR/>Set to 0 to disable.]]></description>
				<default>300</default>
			</parameter>
			<parameter name="config_3_2" type="integer" min="0" max="1000"
				groupName="configuration">
				<label>3: Lux Trigger Off Value</label>
				<description><![CDATA[Lux level when Off command is sent out. <BR/>Set to 0 to disable.]]></description>
				<default>500</default>
			</parameter>
			<parameter name="config_4_2" type="integer" min="0" max="480"
				groupName="configuration">
				<label>4: Lux Trigger Off Timer Value.</label>
				<description><![CDATA[Timer value in minutes. <BR/>Set to 0 to disable.]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_5_2" type="integer" min="0" max="1439"
				groupName="configuration">
				<label>5: Auto Report Time Interval</label>
				<description><![CDATA[Time interval in minutes to auto report to association group 1<BR/> Set to 0 to Disable]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_6_2" type="integer" min="0" max="1000"
				groupName="configuration">
				<label>6: Auto Report Lux Interval</label>
				<description><![CDATA[Lux interval step size to auto report to association group 1<BR/> Set to 0 to Disable]]></description>
				<default>0</default>
			</parameter>
			<parameter name="group_1" type="integer" groupName="association">
				<label>Reports</label>
				<description><![CDATA[***Add description here***]]></description>
			</parameter>
			<parameter name="group_2" type="integer" multiple="true"
				groupName="association">
				<label>Control</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>3</multipleLimit>
			</parameter><!-- Remove the wakeup if this is not a battery device -->
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent</description>
			</parameter>
		</config-description>
	</thing-type>
</thing:thing-descriptions>