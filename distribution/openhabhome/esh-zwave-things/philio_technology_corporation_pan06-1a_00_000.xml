	<thing-type id="philiotechnologycorporation_pan06-1a_00_000">
		<label>Philio Technology Corporation PAN06-1A</label>
		<description><![CDATA[In Wall Dual Relay(1 Way) Switch Module 2x 1.5kW
			]]></description>
		<channels>
			<channel id="dimmer-1" typeId="dimmer">
				<properties>
					<property name="endpoint">0</property>
					<property name="commandClass">SWITCH_MULTILEVEL,BASIC</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="endpoint">1</property>
					<property name="commandClass">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Philio Technology Corporation</property>
			<property name="model">PAN06-1A</property>
			<property name="manufacturerId">013C</property>
			<property name="manufacturerRef">0001:0013</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
				<description></description>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
				<description></description>
			</parameter-group>
			<parameter name="config_1_1" type="integer" groupName="configuration">
				<label>1: Selected endpoint</label>
				<description><![CDATA[If Controller not using Multi_Channel command class
							to access the endpoint of PAN06, you may configure
							the endpoint value to react the Basic Command Class]]></description>
				<default>1</default>
				<options>
					<option value="1">Relay 1 + 2</option>
					<option value="2">Relay 1</option>
					<option value="3">Relay 2</option>
				</options>
			</parameter>
			<parameter name="config_2_1" type="integer" groupName="configuration">
				<label>2: Switch mode</label>
				<description><![CDATA[Change the external switch mode]]></description>
				<default>1</default>
				<options>
					<option value="1">Edge mode</option>
					<option value="2">Pulse mode</option>
					<option value="3">Edge-Toggle mode</option>
				</options>
			</parameter>
			<parameter name="group_1" type="integer" groupName="association">
				<label>Relay 1 + 2</label>
				<description><![CDATA[***Add description here***]]></description>
			</parameter>
			<parameter name="group_2" type="integer" groupName="association">
				<label>Relay 1</label>
				<description><![CDATA[***Add description here***]]></description>
			</parameter>
			<parameter name="group_3" type="integer" groupName="association">
				<label>Relay 2</label>
				<description><![CDATA[***Add description here***]]></description>
			</parameter>
		</config-description>
	</thing-type>
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>Switch</label>
		<description>Switch the light on and off</description>
		<category>Light</category>
	</channel-type>
