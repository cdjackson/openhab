<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="evolve_ltm-5_00_000">
		<label>Evolve LTM-5</label>
		<description><![CDATA[Wall Mount Accessory Switch<br><h1>Device Overview</h1><p>Brief description here</p><h1>Inclusion and Exclusion</h1><p>To include the device into the network...</p><p>To exclude the device from the network...</p>]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="brightness-1" typeId="brightness">
				<label>Dimmer 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel><!-- Remove if this is not a battery device -->
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel><!-- More samples... -->
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="binding:Command:OnOffType">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
			<channel id="power_watts-1" typeId="power_watts">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel>
			<channel id="power_current-1" typeId="power_current">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_A</property>
				</properties>
			</channel>
			<channel id="power_voltage-1" typeId="power_voltage">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_V</property>
				</properties>
			</channel>
			<channel id="power_powerfactor-1" typeId="power_powerfactor">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_Power_Factor</property>
				</properties>
			</channel>
			<channel id="power_energy-1" typeId="power_energy">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_KWh</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Evolve</property>
			<property name="model">LTM-5</property>
			<property name="manufacturerId">0113</property>
			<property name="manufacturerRef">5457:3033</property>
			<property name="DefaultAssociations">1</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_1_1" type="integer" groupName="configuration">
				<label>1: Ignore Start Level (Transmitting)</label>
				<description><![CDATA[Dimmers controlled by this switch will start dimming from their current level.]]></description>
				<default>1</default>
				<options>
					<option value="0">No</option>
					<option value="1">Yes</option>
				</options>
			</parameter>
			<parameter name="config_3_1" type="integer" groupName="configuration">
				<label>3: Night Light</label>
				<description><![CDATA[In night-light mode the LED on the switch will turn ON when the switch is turned OFF.]]></description>
				<default>1</default>
				<options>
					<option value="0">No</option>
					<option value="1">Yes</option>
				</options>
			</parameter>
			<parameter name="config_4_1" type="integer" groupName="configuration">
				<label>4: Invert Switch</label>
				<description><![CDATA[Change the top of the switch to OFF and the bottom of the switch to ON.]]></description>
				<default>0</default>
				<options>
					<option value="0">No</option>
					<option value="1">Yes</option>
				</options>
			</parameter>
			<parameter name="config_5_1" type="integer" groupName="configuration">
				<label>5: Ignore Start-Level (Receiving)</label>
				<description><![CDATA[The dimmer will start dimming from its current level.]]></description>
				<default>1</default>
				<options>
					<option value="0">No</option>
					<option value="1">Yes</option>
				</options>
			</parameter>
			<parameter name="config_19_1" type="integer" groupName="configuration">
				<label>19: Transmission Indication</label>
				<description><![CDATA[Flicker LED while transmitting.]]></description>
				<default>2</default>
				<options>
					<option value="0">No Flicker</option>
					<option value="1">Flicker Whole Transmission</option>
					<option value="2">Flicker 1 Second</option>
				</options>
			</parameter>
			<parameter name="config_20_1" type="integer" min="1" max="255"
				groupName="configuration">
				<label>20: Polling Interval</label>
				<description><![CDATA[How often, in minutes, to poll to keep synchronized with group.]]></description>
				<default>2</default>
			</parameter>
			<parameter name="config_21_1" type="integer" groupName="configuration">
				<label>21: Poll First Node</label>
				<description><![CDATA[Poll only the first node in Group 1.]]></description>
				<default>0</default>
				<options>
					<option value="0">No</option>
					<option value="1">Yes</option>
				</options>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>Group 1</label>
				<description><![CDATA[Nodes in this group are turned ON/OFF by tapping the paddle or dimmed/brightened by holding the paddle. The LED will indicate the status of this group.]]></description>
				<multipleLimit>5</multipleLimit>
				<default>empty</default>
			</parameter><!-- Remove the wakeup if this is not a battery device -->
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent</description>
			</parameter>
		</config-description>
	</thing-type>
</thing:thing-descriptions>