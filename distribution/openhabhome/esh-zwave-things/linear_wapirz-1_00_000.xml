<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="linear_wapirz-1_00_000">
		<label>Linear WAPIRZ-1</label>
		<description><![CDATA[PIR Motion Detector]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="dimmer-1" typeId="dimmer">
				<label>Dimmer 1</label>
				<properties>
					<property name="commandClass">SWITCH_MULTILEVEL,BASIC</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="commandClass">1:SWITCH_BINARY,BASIC</property>
				</properties>
			</channel><!-- Remove if this is not a battery device -->
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Linear</property>
			<property name="model">WAPIRZ-1</property>
			<property name="manufacturerId">014F</property>
			<property name="manufacturerRef">2002:0203</property>
			<property name="commandClass:ASSOCIATION:0:default">1</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_1_2" type="integer" min="1" max="255"
				groupName="configuration">
				<label>1: Re-trigger Wait Time</label>
				<description><![CDATA[By default, to conserve battery life, after the WAPIRZ-1 detects motion it cannot
be re-triggered by motion again for 3 minutes. Each time motion is detected
(even during this wait time) the 3 minute timer starts over. The length of the
re-trigger wait time can be adjusted with this setting.
			]]></description>
				<default>0</default>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>Group 1</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>5</multipleLimit>
			</parameter><!-- Remove the wakeup if this is not a battery device -->
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent</description>
			</parameter>
		</config-description>
	</thing-type><!-- The following is a random selection of channel-types - 
		it must be changed! -->
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>Switch</label>
		<description>Switch the light on and off</description>
		<category>Light</category>
	</channel-type>
</thing:thing-descriptions>