	<thing-type id="aeonlabs_dsb54_00_000">
		<label>Aeon Labs DSB54</label>
		<description><![CDATA[Recessed Door/Window Sensor (Gen5)]]></description>
		<channels>
			<channel id="dimmer-1" typeId="dimmer">
				<properties>
					<property name="endpoint">0</property>
					<property name="commandClass">SWITCH_MULTILEVEL,BASIC</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="endpoint">1</property>
					<property name="commandClass">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Aeon Labs</property>
			<property name="model">DSB54</property>
			<property name="manufacturerId">0086</property>
			<property name="manufacturerRef">0102:0059</property>
			<property name="commandClass:ASSOCIATION:0:default">1,2</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
				<description></description>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
				<description></description>
			</parameter-group>
			<parameter name="config_1_1" type="integer" groupName="configuration">
				<label>1: Send Sensor binary report on open/close events</label>
				<description><![CDATA[]]>
				</description>
				<default>0</default>
				<options>
					<option value="0">On for opened, Off for closed</option>
					<option value="1">Off for opened, On for closed</option>
				</options>
			</parameter>
			<parameter name="config_3_1" type="integer" groupName="configuration">
				<label>3: Send Basic Set on open/close event</label>
				<description><![CDATA[]]>
				</description>
				<default>0</default>
				<options>
					<option value="0">On for opened, Off for closed</option>
					<option value="1">Off for opened, On for closed</option>
				</options>
			</parameter>
			<parameter name="config_101_1" type="integer" groupName="configuration">
				<label>101: Low battery voltage check</label>
				<description><![CDATA[parameter defines, if battery check function is possible, when battery is below warning voltage]]></description>
				<default>0</default>
				<options>
					<option value="0">Disable</option>
					<option value="1">Enable</option>
				</options>
			</parameter>
			<parameter name="config_111_4" type="integer" min="0" max="65535"
				groupName="configuration">
				<label>111: Low battery voltage check time</label>
				<description><![CDATA[Minimum battery low check Interval time is 4 minutes (240 seconds)]]></description>
				<default>112</default>
			</parameter>
			<parameter name="config_121_4" type="integer" min="0" max="65535"
				groupName="configuration">
				<label>121: Flag values for triggered magnet switch</label>
				<description><![CDATA[Flag values for which reports to send when the magnet switch is triggered]]></description>
				<default>256</default>
			</parameter>
			<parameter name="config_252_1" type="integer" groupName="configuration">
				<label>252: Permit other configurations</label>
				<description><![CDATA[Lock or Unlock other configuration set function]]></description>
				<default>0</default>
				<options>
					<option value="0">Unlock</option>
					<option value="1">Lock</option>
				</options>
			</parameter>
			<parameter name="config_255_2" type="integer" groupName="configuration">
				<label>255: Reset to default</label>
				<description><![CDATA[Reset to the default configuration]]></description>
				<default>0</default>
				<options>
					<option value="0">Reset</option>
				</options>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>State Updates</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>5</multipleLimit>
			</parameter>
			<parameter name="group_2" type="integer" multiple="true"
				groupName="association">
				<label>Battery Warnings</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>5</multipleLimit>
			</parameter>
		</config-description>
	</thing-type>
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>Switch</label>
		<description>Switch the light on and off</description>
		<category>Light</category>
	</channel-type>
