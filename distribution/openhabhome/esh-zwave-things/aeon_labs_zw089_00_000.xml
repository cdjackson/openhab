				<context>menu</context>
				<label>Tools</label>
			</parameter-group>
			<parameter name="config_1_1" type="integer" groupName="configuration">
				<label>1: Send Sensor binary report on open/close events</label>
				<description><![CDATA[]]>
				</description>
				<default>0</default>
				<options>
					<option value="0">On for opened, Off for closed</option>
					<option value="1">Off for opened, On for closed</option>
				</options>
			</parameter>
			<parameter name="config_3_1" type="integer" groupName="configuration">
				<label>3: Send Basic Set on open/close event</label>
				<description><![CDATA[]]>
				</description>
				<default>0</default>
				<options>
					<option value="0">On for opened, Off for closed</option>
					<option value="1">Off for opened, On for closed</option>
				</options>
			</parameter>
			<parameter name="config_101_1" type="integer" groupName="configuration">
				<label>101: Low battery voltage check</label>
				<description><![CDATA[parameter defines, if battery check function is possible, when battery is below warning voltage]]></description>
				<default>0</default>
				<options>
					<option value="0">Disable</option>
					<option value="1">Enable</option>
				</options>
			</parameter>
			<parameter name="config_111_4" type="integer" min="0" max="65535"
				groupName="configuration">
				<label>111: Low battery voltage check time</label>
				<description><![CDATA[Minimum battery low check Interval time is 4 minutes (240 seconds)]]></description>
				<default>112</default>
			</parameter>
			<parameter name="config_121_4" type="integer" min="0" max="65535"
				groupName="configuration">
				<label>121: Flag values for triggered magnet switch</label>
				<description><![CDATA[Flag values for which reports to send when the magnet switch is triggered]]></description>
				<default>256</default>
			</parameter>
			<parameter name="config_252_1" type="integer" groupName="configuration">
				<label>252: Permit other configurations</label>
				<description><![CDATA[Lock or Unlock other configuration set function]]></description>
				<default>0</default>
				<options>
					<option value="0">Unlock</option>
					<option value="1">Lock</option>
				</options>
			</parameter>
			<parameter name="config_255_2_wo" type="integer" groupName="tools">
				<label>255: Reset to default</label>
				<description><![CDATA[Reset to the default configuration]]></description>
				<default>0</default>
				<options>
					<option value="0">Reset</option>
				</options>
			</parameter>
