<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="philiotechnologycorporation_pan04-1b_00_000">
		<label>Philio Technology Corporation PAN04-1B</label>
		<description><![CDATA[In Wall Dual Relay(1 Way) Switch Module 2x 1.5kW
				with power meter
			]]></description>
		<channels>
			<channel id="switch0" typeId="dimmer">
				<properties>
					<property name="endpoint">0</property>
					<property name="command_class">SWITCH_MULTILEVEL</property>
					<property name="set_to_basic">true</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Philio Technology Corporation</property>
			<property name="model">PAN04-1B</property>
			<property name="manufacturerId">013C</property>
			<property name="manufacturerRef">0001:0012</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
				<description></description>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
				<description></description>
			</parameter-group>
			<parameter name="config_1" type="integer" groupName="configuration">
				<label>1: W meter report period</label>
				<description><![CDATA[If the setting is configured for 1 hour (value = 720),
							the device will report its instant power consumption every 1 hour to Z-Wave Controller.
							Unit: 5 seconds]]></description>
				<default>720</default>
			</parameter>
			<parameter name="config_2" type="integer" groupName="configuration">
				<label>2: kWh meter report period</label>
				<description><![CDATA[If the setting is configured for 1 hour (value = 6),
							the device will report its total power consumption every 1 hour to Z-Wave Controller.
							Unit: 10 minutes]]></description>
				<default>6</default>
			</parameter>
			<parameter name="config_3" type="integer" groupName="configuration">
				<label>3: Selected endpoint</label>
				<description><![CDATA[If Controller not using Multi_Channel command class
							to access the endpoint of PAN04, you may configure
							the endpoint value to react the Basic Command Class]]></description>
				<default>1</default>
				<options>
					<option value="1">Relay 1 + 2</option>
					<option value="2">Relay 1</option>
					<option value="3">Relay 2</option>
				</options>
			</parameter>
			<parameter name="config_4" type="integer" groupName="configuration">
				<label>4: Switch mode</label>
				<description><![CDATA[Change the external switch mode]]></description>
				<default>1</default>
				<options>
					<option value="1">Edge mode</option>
					<option value="2">Pulse mode</option>
					<option value="3">Edge-Toggle mode</option>
				</options>
			</parameter>
			<parameter name="config_5" type="integer" groupName="configuration">
				<label>5: Threshold of Watt for Load Caution</label>
				<description><![CDATA[If threshold of wattage is reached, a meter report will be generated]]></description>
				<default>720</default>
			</parameter>
			<parameter name="config_6" type="integer" groupName="configuration">
				<label>6: Threshold of kWh for Load Caution</label>
				<description><![CDATA[If threshold of kWh is reached, a Meter Report will be generated]]></description>
				<default>720</default>
			</parameter>
			<parameter name="group_1" type="integer" groupName="association">
				<label>Relay 1 + 2</label>
			</parameter>
			<parameter name="group_2" type="integer" groupName="association">
				<label>Relay 1</label>
			</parameter>
			<parameter name="group_3" type="integer" groupName="association">
				<label>Relay 2</label>
			</parameter>
		</config-description>
	</thing-type>
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
</thing:thing-descriptions>