<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="aeonlabs_dsd31_00_000">
		<label>Aeon Labs DSD31</label>
		<description><![CDATA[Outlet Plugable Siren<br><h1>Device Overview</h1><p>Brief description here</p><h1>Inclusion and Exclusion</h1><p>To include the device into the network...</p><p>To exclude the device from the network...</p>]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="dimmer-1" typeId="dimmer">
				<label>Dimmer 1</label>
				<properties>
					<property name="commandClass">SWITCH_MULTILEVEL,BASIC</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="commandClass">1:SWITCH_BINARY,BASIC</property>
				</properties>
			</channel><!-- Remove if this is not a battery device -->
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Aeon Labs</property>
			<property name="model">DSD31</property>
			<property name="manufacturerId">0086</property>
			<property name="manufacturerRef">0004:0050</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_37_2" type="integer" groupName="configuration">
				<label>37: Sirensound and Volume</label>
				<description><![CDATA[The Value1(low byte) is used to select the Siren sound. The Value2(high byte) is used to adjust the volume. Other values will be ignored.
						0 1	  ->  	do not change the current sound.
1 1	  ->  	Siren sound 1 is selected.
2 1	  ->  	Siren sound 2 is selected.
3 1	  ->  	Siren sound 3 is selected.
4 1	  ->  	Siren sound 4 is selected.
5 1	  ->  	Siren sound 5 is selected.
]]></description>
				<default>13</default>
			</parameter>
			<parameter name="config_80_1" type="integer" groupName="configuration">
				<label>80: Send Notifications</label>
				<description><![CDATA[Enable to send notifications to associated devices when the state of Siren changed.]]></description>
				<default>0</default>
				<options>
					<option value="0">Nothing</option>
					<option value="1">Hail CC</option>
					<option value="2">Basic CC Report</option>
				</options>
			</parameter>
			<parameter name="config_252_1" type="integer" groupName="configuration">
				<label>252: Enable/Disable "Lock" - Configuration</label>
				<description><![CDATA[]]>
				</description>
				<default>0</default>
				<options>
					<option value="0">Disable</option>
					<option value="1">Enable</option>
				</options>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>Lifeline</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>5</multipleLimit>
			</parameter><!-- Remove the wakeup if this is not a battery device -->
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent</description>
			</parameter>
		</config-description>
	</thing-type><!-- The following is a random selection of channel-types - 
		it must be changed! -->
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>Switch</label>
		<description>Switch the light on and off</description>
		<category>Light</category>
	</channel-type>
</thing:thing-descriptions>