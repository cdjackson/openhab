<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="northq_nq-9021_00_000">
		<label>NorthQ NQ-9021</label>
		<description><![CDATA[NorthQ Electrical Meter]]></description>
		<channels>
			<channel id="switch0" typeId="dimmer">
				<properties>
					<property name="endpoint">0</property>
					<property name="command_class">SWITCH_MULTILEVEL</property>
					<property name="set_to_basic">true</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">NorthQ</property>
			<property name="model">NQ-9021</property>
			<property name="manufacturerId">0096</property>
			<property name="manufacturerRef">0001:0001</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
				<description></description>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
				<description></description>
			</parameter-group>
			<parameter name="config_1" type="integer" groupName="configuration">
				<label>1: Pulse factor</label>
				<description><![CDATA[How many pulses * 10 per kWh]]></description>
				<default>10000</default>
			</parameter>
			<parameter name="config_2" type="integer" groupName="configuration">
				<label>2: Sensor type</label>
				<description><![CDATA[null]]></description>
				<default>2</default>
				<options>
					<option value="1">magnetic contact</option>
					<option value="2">silver spot meter</option>
				</options>
			</parameter>
			<parameter name="config_3" type="integer" min="0" max="127"
				groupName="configuration">
				<label>3: IR Listen period</label>
				<description><![CDATA[Additional time for feedback measurement. Should always be 0.]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_4" type="integer" min="0" max="127"
				groupName="configuration">
				<label>4: IR Pulse Width</label>
				<description><![CDATA[Adjusts transmit signal so received signal will in average be equal to this values.]]></description>
				<default>50</default>
			</parameter>
			<parameter name="config_5" type="integer" min="1" max="50"
				groupName="configuration">
				<label>5: Poll / Wake up frequency</label>
				<description><![CDATA[Wake device up this many times per second. This value also controls number of measurements per second on mechanical meters]]></description>
				<default>20</default>
			</parameter>
			<parameter name="config_6" type="integer" min="0" max="128"
				groupName="configuration">
				<label>6: Pulse Threshold Low</label>
				<description><![CDATA[Low detection threshold for wheel meters]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_7" type="integer" min="0" max="128"
				groupName="configuration">
				<label>7: Pulse Threshold High</label>
				<description><![CDATA[High detection threshold for wheel meters]]></description>
				<default>5</default>
			</parameter>
			<parameter name="config_8" type="integer" min="0"
				groupName="configuration">
				<label>8: Wakeup Interval</label>
				<description><![CDATA[like WAKEUP command class]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_9" type="integer" min="1" max="50"
				groupName="configuration">
				<label>9: Pulse count</label>
				<description><![CDATA[Current pulse count in device (pulse count / pulse factor = kWh)]]></description>
				<default>20</default>
			</parameter>
			<parameter name="config_10" type="integer" min="0" max="32767"
				groupName="configuration">
				<label>10: Keep alive period</label>
				<description><![CDATA[How many ticks before going back to sleep in normal wakeup mode.]]></description>
				<default>60</default>
			</parameter>
			<parameter name="config_11" type="integer" min="0" max="32767"
				groupName="configuration">
				<label>11: Real-time mode</label>
				<description><![CDATA[Set this to enter real-time mode from remote. Contains seconds * poll frequency before going back to sleep. If you press the button once this value will be set.]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_13" type="integer" min="0" max="1"
				groupName="configuration">
				<label>13: Off</label>
				<description><![CDATA[LED blinks at pulse counting]]></description>
				<default>0</default>
			</parameter>
		</config-description>
	</thing-type>
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
</thing:thing-descriptions>