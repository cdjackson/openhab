	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="act_zir010_00_000">
		<label>ACT ZIR010</label>
		<description><![CDATA[PIR Motion Sensor<br><h1>Device Overview</h1><p>Brief description here</p><h1>Inclusion and Exclusion</h1><p>To include the device into the network...</p><p>To exclude the device from the network...</p>]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="brightness-1" typeId="brightness">
				<label>Dimmer 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel><!-- Remove if this is not a battery device -->
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel><!-- More samples... -->
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="binding:Command:OnOffType">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
			<channel id="power_watts-1" typeId="power_watts">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel>
			<channel id="power_current-1" typeId="power_current">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_A</property>
				</properties>
			</channel>
			<channel id="power_voltage-1" typeId="power_voltage">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_V</property>
				</properties>
			</channel>
			<channel id="power_powerfactor-1" typeId="power_powerfactor">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_Power_Factor</property>
				</properties>
			</channel>
			<channel id="power_energy-1" typeId="power_energy">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_KWh</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">ACT</property>
			<property name="model">ZIR010</property>
			<property name="manufacturerId">0001</property>
			<property name="manufacturerRef">4952:3130</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_17_1" type="integer" groupName="configuration">
				<label>17: Mode</label>
				<description><![CDATA[The ZIR010 can be configured to operate in 1 of 3 modes.
				Those modes are:
				Lighting Mode (factory default)
				Alarm Mode
				Sensor Mode
				Information reproduced from: http://www.pepper1.net/zwavedb/uploads/resources/bdf086a9388325a2fb8b8aa298e24e512faec65d.pdf
			]]></description>
				<default>0</default>
				<options>
					<option value="0">Lightning</option>
					<option value="1">Alarm</option>
					<option value="2">Sensor</option>
				</options>
			</parameter>
			<parameter name="config_18_null" type="integer" min="0"
				max="255" groupName="configuration">
				<label>18: Off/Idle delay</label>
				<description><![CDATA[The configuration parameter that can be used to adjust the amount of delay before the OFF or IDLE command is transmitted is Configuration Parameter # 18.
				This parameter can be configured with the value of 0 through 255.
				Where 0 means no delay and 255 means 255 minutes of delay.
				Default appears to be 1 min.
				Information reproduced from: http://www.pepper1.net/zwavedb/uploads/resources/bdf086a9388325a2fb8b8aa298e24e512faec65d.pdf
			]]></description>
				<default>1</default>
			</parameter>
			<parameter name="config_19_null" type="integer" groupName="configuration">
				<label>19: Unsolicited Commands</label>
				<description><![CDATA[The ZIR010 can be disabled from sending commands unsolicited without removing associated devices by
				setting Configuration Parameter # 19 to 0 (when asked for number of bytes, select 1).
				Setting it back to 1 will re-enable the ZIR010.
				Information reproduced from: http://www.pepper1.net/zwavedb/uploads/resources/bdf086a9388325a2fb8b8aa298e24e512faec65d.pdf
			]]></description>
				<default>1</default>
				<options>
					<option value="1">enabled</option>
					<option value="0">disabled</option>
				</options>
			</parameter>
			<parameter name="config_22_null" type="integer" min="15"
				max="45" groupName="configuration">
				<label>22: Awake Time</label>
				<description><![CDATA[
				The time the ZIR010 stays awake can be adjusted from 15 seconds to 45 seconds by sending a value of 15
				to 45 to the ZIR010 using Configuration Parameter # 22 (when asked for the number of bytes, select 1).
				This awake time period starts over every time the ZIR010 receives a command or request.
				Defaults to 30 seconds.
				Information reproduced from: http://www.pepper1.net/zwavedb/uploads/resources/bdf086a9388325a2fb8b8aa298e24e512faec65d.pdf
			]]></description>
				<default>30</default>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>Motion</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>5</multipleLimit>
				<default>empty</default>
			</parameter>
			<parameter name="group_2" type="integer" multiple="true"
				groupName="association">
				<label>Tamper</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>5</multipleLimit>
				<default>empty</default>
			</parameter>
			<parameter name="group_3" type="integer" multiple="true"
				groupName="association">
				<label>Battery</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>5</multipleLimit>
				<default>empty</default>
			</parameter><!-- Remove the wakeup if this is not a battery device -->
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent</description>
			</parameter>
		</config-description>
	</thing-type>
</thing:thing-descriptions>