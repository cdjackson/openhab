<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="wintop_wtrfid_00_000">
		<label>Wintop WTRFID</label>
		<description><![CDATA[Mini Keypad RFID/Z-Wave]]></description>
		<channels>
			<channel id="dimmer-1" typeId="dimmer">
				<properties>
					<property name="endpoint">0</property>
					<property name="commandClass">SWITCH_MULTILEVEL,BASIC</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="endpoint">1</property>
					<property name="commandClass">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Wintop</property>
			<property name="model">WTRFID</property>
			<property name="manufacturerId">0097</property>
			<property name="manufacturerRef">6131:4501</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
				<description></description>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
				<description></description>
			</parameter-group>
			<parameter name="config_1_1" type="integer" groupName="configuration">
				<label>1: Reset to factory default</label>
				<description><![CDATA[Delete configuration but keeps inclusion]]></description>
				<default>0</default>
				<options>
					<option value="0">No (default)</option>
					<option value="1">Execute reset</option>
				</options>
			</parameter>
			<parameter name="config_2_1" type="integer" groupName="configuration">
				<label>2: Command sent on external dry contact</label>
				<description><![CDATA[Configure what te external contact sends when trigger]]></description>
				<default>0</default>
				<options>
					<option value="0">Alarm Resport Type 2 (default)</option>
					<option value="1">Basic On or Basic Off</option>
				</options>
			</parameter>
			<parameter name="config_5_1" type="integer" groupName="configuration">
				<label>5: Operating Mode</label>
				<description><![CDATA[Defines if the sensor is in normal wakeup mode or always on (drains battery fast)]]></description>
				<default>1</default>
				<options>
					<option value="1">Normal Wakeup (default)</option>
					<option value="3">Always awake</option>
				</options>
			</parameter>
			<parameter name="config_6_2" type="integer" min="1" max="15300"
				groupName="configuration">
				<label>6: Temperature Offset</label>
				<description><![CDATA[Can be used to calibrate the temperature sensors function. Calibrated as factory default.]]></description>
				<default>0</default>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>Binary input Group</label>
				<description><![CDATA[Dry binary input close/open]]></description>
				<multipleLimit>5</multipleLimit>
			</parameter>
			<parameter name="group_2" type="integer" multiple="true"
				groupName="association">
				<label>Alarm Group</label>
				<description><![CDATA[Alarm Condition - tempering switch trips]]></description>
				<multipleLimit>5</multipleLimit>
			</parameter>
		</config-description>
	</thing-type>
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>Switch</label>
		<description>Switch the light on and off</description>
		<category>Light</category>
	</channel-type>
</thing:thing-descriptions>