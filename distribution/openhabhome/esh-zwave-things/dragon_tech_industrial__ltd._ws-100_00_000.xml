	<thing-type id="dragontechindustrial,ltd._ws-100_00_000">
		<label>Dragon Tech Industrial, Ltd. WS-100</label>
		<description><![CDATA[Wall On/Off Switch]]></description>
		<channels>
			<channel id="switch0" typeId="dimmer">
				<properties>
					<property name="endpoint">0</property>
					<property name="command_class">SWITCH_MULTILEVEL</property>
					<property name="set_to_basic">true</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Dragon Tech Industrial, Ltd.</property>
			<property name="model">WS-100</property>
			<property name="manufacturerId">0184</property>
			<property name="manufacturerRef">4447:3033</property>
			<property name="commandClass:ASSOCIATION:0:default">1</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
				<description></description>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
				<description></description>
			</parameter-group>
			<parameter name="config_3" type="integer" groupName="configuration">
				<label>3: LED Indicator</label>
				<description><![CDATA[Controls LED behavior when switch state is on/off]]></description>
				<default>0</default>
				<options>
					<option value="0">off/on</option>
					<option value="1">on/off</option>
					<option value="2">off</option>
				</options>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>Group 1</label>
				<multipleLimit>5</multipleLimit>
			</parameter>
		</config-description>
	</thing-type>
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
</thing:thing-descriptions>