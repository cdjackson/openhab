	<thing-type id="nodon_crc-3100_00_000">
		<label>Nodon CRC-3100</label>
		<description><![CDATA[Remote Control<br><h1>Device Overview</h1><p>Brief description here</p><h1>Inclusion and Exclusion</h1><p>To include the device into the network...</p><p>To exclude the device from the network...</p>]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="brightness-1" typeId="brightness">
				<label>Dimmer 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel><!-- Remove if this is not a battery device -->
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel><!-- More samples... -->
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="binding:Command:OnOffType">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
			<channel id="power_watts-1" typeId="power_watts">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel>
			<channel id="power_current-1" typeId="power_current">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_A</property>
				</properties>
			</channel>
			<channel id="power_voltage-1" typeId="power_voltage">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_V</property>
				</properties>
			</channel>
			<channel id="power_powerfactor-1" typeId="power_powerfactor">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_Power_Factor</property>
				</properties>
			</channel>
			<channel id="power_energy-1" typeId="power_energy">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_KWh</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Nodon</property>
			<property name="model">CRC-3100</property>
			<property name="manufacturerId">0165</property>
			<property name="manufacturerRef">0002:0001</property>
			<property name="DefaultAssociations">1</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_1_1" type="integer" groupName="configuration">
				<label>1: Buttons 1 and 3 profile</label>
				<description><![CDATA[To set-up the profile of buttons 1 and 3]]></description>
				<default>0</default>
				<options>
					<option value="0">Scene</option>
					<option value="1">Mono</option>
					<option value="2">Duo</option>
				</options>
			</parameter>
			<parameter name="config_2_1" type="integer" groupName="configuration">
				<label>2: Buttons 2 and 4 profile</label>
				<description><![CDATA[To set-up the profile of buttons 2 and 4]]></description>
				<default>0</default>
				<options>
					<option value="0">Scene</option>
					<option value="1">Mono</option>
					<option value="2">Duo</option>
				</options>
			</parameter>
			<parameter name="config_3_1" type="integer" groupName="configuration">
				<label>3: Scene Type</label>
				<description><![CDATA[To choose the way of sending Scene to the gateway]]></description>
				<default>0</default>
				<options>
					<option value="0">Central Scene</option>
					<option value="1">Scene Activation</option>
				</options>
			</parameter>
			<parameter name="config_4_1" type="integer" groupName="configuration">
				<label>4: Button 1 configuration</label>
				<description><![CDATA[To set-up the how button 1 behaves, when set in MONO Profile]]></description>
				<default>0</default>
				<options>
					<option value="0">Control group 2</option>
					<option value="1">All switches ON</option>
					<option value="2">All switches OFF</option>
				</options>
			</parameter>
			<parameter name="config_5_1" type="integer" groupName="configuration">
				<label>5: Button 2 configuration</label>
				<description><![CDATA[To set-up the how button 2 behaves, when set in MONO Profile]]></description>
				<default>0</default>
				<options>
					<option value="0">Control group 3</option>
					<option value="1">All switches ON</option>
					<option value="2">All switches OFF</option>
				</options>
			</parameter>
			<parameter name="config_6_1" type="integer" groupName="configuration">
				<label>6: Button 3 configuration</label>
				<description><![CDATA[To set-up the how button 3 behaves, when set in MONO Profile]]></description>
				<default>0</default>
				<options>
					<option value="0">Control group 4</option>
					<option value="1">All switches ON</option>
					<option value="2">All switches OFF</option>
				</options>
			</parameter>
			<parameter name="config_7_1" type="integer" groupName="configuration">
				<label>7: Button 4 configuration</label>
				<description><![CDATA[To set-up the how button 4 behaves, when set in MONO Profile]]></description>
				<default>0</default>
				<options>
					<option value="0">Control group 5</option>
					<option value="1">All switches ON</option>
					<option value="2">All switches OFF</option>
				</options>
			</parameter>
			<parameter name="config_8_1" type="integer" groupName="configuration">
				<label>8: LED Management</label>
				<description><![CDATA[How to set up LED behaviour]]></description>
				<default>0</default>
				<options>
					<option value="0">No LED</option>
					<option value="1">Flash Blue after button press</option>
					<option value="2">Blink to confirm command</option>
					<option value="3">Flash Blue after button press and blink to
						confirm command</option>
				</options>
			</parameter>
