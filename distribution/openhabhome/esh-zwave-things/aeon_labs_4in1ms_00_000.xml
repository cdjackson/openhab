<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="aeonlabs_4in1ms_00_000">
		<label>Aeon Labs 4in1MS</label>
		<description><![CDATA[4 in One MultiSensor]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="dimmer-1" typeId="dimmer">
				<label>Dimmer 1</label>
				<properties>
					<property name="commandClass">SWITCH_MULTILEVEL,BASIC</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="commandClass">1:SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Aeon Labs</property>
			<property name="model">4in1MS</property>
			<property name="manufacturerId">0086</property>
			<property name="manufacturerRef">0002:0005</property>
			<property
				name="commandClass:SENSOR_MULTILEVEL:NO_GET</property-group></properties><config-description><parameter-group name="
				configuration ">
				<context>setup</context>
				<label>Configuration Parameters</label>
				<description></description>
			</parameter-group>
				<parameter-group name="association">
					<context>link</context>
					<label>Association Groups</label>
					<description></description>
				</parameter-group>
				<parameter name="config_1_1" type="integer" groupName="configuration">
					<label>1: Send Sensor binary report on open/close events</label>
					<description><![CDATA[]]>
					</description>
					<default>0</default>
					<options>
						<option value="0">On for opened, Off for closed</option>
						<option value="1">Off for opened, On for closed</option>
					</options>
				</parameter>
				<parameter name="config_2_1" type="integer" groupName="configuration">
					<label>2: Enable wake up 10 minutes when power on</label>
					<description><![CDATA[]]>
					</description>
					<default>0</default>
					<options>
						<option value="0">No</option>
						<option value="1">Yes</option>
					</options>
				</parameter>
				<parameter name="config_3_1" type="integer" groupName="configuration">
					<label>3: Send Basic Set on open/close event</label>
					<description><![CDATA[]]>
					</description>
					<default>0</default>
					<options>
						<option value="0">On for opened, Off for closed</option>
						<option value="1">Off for opened, On for closed</option>
					</options>
				</parameter>
				<parameter name="config_121_4" type="integer" groupName="configuration">
					<label>121: Send those commands to associated devices on
						open/close/tamper events</label>
					<description><![CDATA[Bit mapped<BR/>
						0	   ->  	Battery report<BR/>
4	   ->  	Sensor binary report<BR/>
8	   ->  	Basic Set  ]]></description>
					<default>4</default>
				</parameter>
				<parameter name="group_1" type="integer" multiple="true"
					groupName="association">
					<label>Group 1</label>
					<description><![CDATA[***Add description here***]]></description>
					<multipleLimit>5</multipleLimit>
				</parameter>
			</config-description>
	</thing-type><!-- The following is a random selection of channel-types - 
		it must be changed! -->
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Set the light level</description>
		<category>Light</category>
	</channel-type>
	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>Switch</label>
		<description>Switch the light on and off</description>
		<category>Light</category>
	</channel-type>
</thing:thing-descriptions>