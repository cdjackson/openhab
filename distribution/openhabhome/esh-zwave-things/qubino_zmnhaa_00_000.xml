<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/zwave-thing-description/v1.0.0">
	<thing-type id="qubino_zmnhaa_00_000">
		<label>Qubino ZMNHAA</label>
		<description><![CDATA[Flush 1 relay<br><h1>Device Overview</h1><p>Brief description here</p><h1>Inclusion and Exclusion</h1><p>To include the device into the network...</p><p>To exclude the device from the network...</p>]]></description>
		<channels><!-- The following is a random selection of channels - it must 
				be changed! -->
			<channel id="brightness-1" typeId="brightness">
				<label>Dimmer 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
				</properties>
			</channel>
			<channel id="switch-1" typeId="switch">
				<label>Switch 1</label>
				<properties>
					<property name="binding:*:HSBType">COLOR;colorHue=true</property>
					<property name="binding:*:PercentType">SWITCH_MULTILEVEL,BASIC</property>
					<property name="binding:Command:OnOffType">SWITCH_MULTILEVEL</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:1,BASIC:1</property>
					<property name="binding:*:OnOffType">SWITCH_BINARY:2,BASIC:2</property>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel><!-- Remove if this is not a battery device -->
			<channel id="battery-level" typeId="system.battery-level">
				<properties>
					<property name="commandClass">BATTERY</property>
				</properties>
			</channel><!-- More samples... -->
			<channel id="switch-1" typeId="switch">
				<properties>
					<property name="binding:Command:OnOffType">SWITCH_BINARY,BASIC</property>
				</properties>
			</channel>
			<channel id="power_watts-1" typeId="power_watts">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_W</property>
				</properties>
			</channel>
			<channel id="power_current-1" typeId="power_current">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_A</property>
				</properties>
			</channel>
			<channel id="power_voltage-1" typeId="power_voltage">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_V</property>
				</properties>
			</channel>
			<channel id="power_powerfactor-1" typeId="power_powerfactor">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_Power_Factor</property>
				</properties>
			</channel>
			<channel id="power_energy-1" typeId="power_energy">
				<properties>
					<property name="binding:*:DecimalType">METER;meterScale=E_KWh</property>
				</properties>
			</channel>
		</channels>
		<properties>
			<property name="vendor">Qubino</property>
			<property name="model">ZMNHAA</property>
			<property name="manufacturerId">0159</property>
			<property name="manufacturerRef">0002:0002</property>
			<property name="DefaultAssociations">4</property>
		</properties>
		<config-description>
			<parameter-group name="configuration">
				<context>setup</context>
				<label>Configuration Parameters</label>
			</parameter-group>
			<parameter-group name="association">
				<context>link</context>
				<label>Association Groups</label>
			</parameter-group><!-- Remove if this is not a battery device -->
			<parameter-group name="wakeup">
				<context>sleep</context>
				<label>Wakeup Configuration</label>
			</parameter-group>
			<parameter name="config_1_1" type="integer" groupName="configuration">
				<label>1: Input 1 switch type</label>
				<description><![CDATA[Input 1 switch type]]></description>
				<default>1</default>
				<options>
					<option value="0">mono-stable switch type (push button)</option>
					<option value="1">bi-stable switch type</option>
				</options>
			</parameter>
			<parameter name="config_2_1" type="integer" groupName="configuration">
				<label>2: Input 2 contact type</label>
				<description><![CDATA[Input 2 contact type]]></description>
				<default>0</default>
				<options>
					<option value="0">NO (normaly open) input type</option>
					<option value="1"> NC (normaly close) input type</option>
				</options>
			</parameter>
			<parameter name="config_3_1" type="integer" groupName="configuration">
				<label>3: Input 3 contact type</label>
				<description><![CDATA[Input 3 contact type]]></description>
				<default>0</default>
				<options>
					<option value="0">NO (normaly open) input type</option>
					<option value="1"> NC (normaly close) input type</option>
				</options>
			</parameter>
			<parameter name="config_10_1" type="integer" groupName="configuration">
				<label>10: Activate / deactivate functions ALL ON/ALL OFF</label>
				<description><![CDATA[Flush 1 relay module responds to commands ALL ON / 
ALL OFF that may be sent by the main controller or by 
other controller belonging to the system.]]></description>
				<default>255</default>
				<options>
					<option value="255">ALL ON active, ALL OFF active</option>
					<option value="0">ALL ON is not active ALL OFF is not active</option>
					<option value="1">ALL ON is not active ALL OFF active</option>
					<option value="2">ALL ON active ALL OFF is not active</option>
				</options>
			</parameter>
			<parameter name="config_11_2" type="integer" groupName="configuration">
				<label>11: Automatic turning off relay after set time</label>
				<description><![CDATA[0 - Auto OFF disabled 
1 – 65535 = 0,01second – 655,35 seconds
Auto OFF enabled with define time, step is 10mseconds]]></description>
				<default>0</default>
			</parameter>
			<parameter name="config_30_1" type="integer" groupName="configuration">
				<label>30: Saving the state of the relay after a power failure</label>
				<description><![CDATA[Saving the state of the relay after a power failure]]></description>
				<default>0</default>
				<options>
					<option value="0">Flush 1relay module saves its state before
						power failure (it returns to the last position saved before a
						power failure)</option>
					<option value="1">Flush 1relay module does not save the state
						after a power failure, it returns to "off" position.
					</option>
				</options>
			</parameter>
			<parameter name="config_40_1" type="integer" groupName="configuration">
				<label>40: Power reporting in Watts on power change</label>
				<description><![CDATA[0 – Reporting Disabled
1 – 100 = 1% - 100% Reporting enabled
Power report is send (push) only when actual 
power in Watts in real time change for more than 
set percentage comparing to previous actual 
power in Watts, step is 1%.
NOTE: if power changed is less than 1W, the report is 
not send (pushed), independent of percentage set. ]]></description>
				<default>3</default>
			</parameter>
			<parameter name="config_42_2" type="integer" groupName="configuration">
				<label>42: Power reporting in Watts on power change</label>
				<description><![CDATA[default value 300 (power report in Watts is 
send each 300s)
0 – Reporting Disabled
1 – 65535 = 1second – 65535 seconds.
Reporting enabled. Power report is send with time 
interval set by entered value. ]]></description>
				<default>300</default>
			</parameter>
			<parameter name="group_1" type="integer" multiple="true"
				groupName="association">
				<label>basic on/off (triggered at change of the output
					Q state and reflecting its state)</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>4</multipleLimit>
			</parameter>
			<parameter name="group_2" type="integer" multiple="true"
				groupName="association">
				<label> basic on/off (triggered at change of the input I2
					state and reflecting its state)</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>4</multipleLimit>
			</parameter>
			<parameter name="group_3" type="integer" multiple="true"
				groupName="association">
				<label> basic on/off (triggered at change of the input I3
					state and reflecting its state)</label>
				<description><![CDATA[***Add description here***]]></description>
				<multipleLimit>4</multipleLimit>
			</parameter>
			<parameter name="group_4" type="integer" groupName="association">
				<label>Controller Updates</label>
				<description><![CDATA[***Add description here***]]></description>
			</parameter><!-- Remove the wakeup if this is not a battery device -->
			<parameter name="wakeup_interval" type="integer" groupName="wakeup">
				<label>Wakeup Period</label>
				<description>Set the wakeup period in seconds</description>
			</parameter>
			<parameter name="wakeup_node" type="integer" groupName="wakeup"
				readOnly="true">
				<label>Wakeup Node</label>
				<description>The node to which wakeup messages will be sent</description>
			</parameter>
		</config-description>
	</thing-type>
</thing:thing-descriptions>